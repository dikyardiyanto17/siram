<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="/favicon.png">
    <link rel="stylesheet" href="/assets/plugins/datatable/datatables.min.css">
    <link rel="stylesheet" href="/assets/css/room_siram.css">
    <link rel="stylesheet" href="/assets/css/custom_datatable_room.css">
    <link rel="stylesheet" href="/assets/css/custom_datatable.css">
    <link href='https://fonts.googleapis.com/css?family=Plus Jakarta Sans' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <title>Telepati</title>
</head>

<body>
    <div class="full-container">
        [/- include('../../partial/header') /]
        <div id="loading-id" class="loading-show">
            <img src="/assets/pictures/loading.svg" alt="loading-bar" />
        </div>
        <div class="main-container">
            <div class="participant-list-container">
                <div class="participant-list-header">
                    <h3>Daftar Rapat</h3>
                    <hr>
                </div>
                <div class="table-responsive">
                    <table class="table" id="customize-table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Tipe Rapat</th>
                                <th>Nomor Perkara</th>
                                <th>Judul Rapat</th>
                                <th>Waktu Mulai</th>
                                <th>Waktu Selesai</th>
                                <th>Jumlah Peserta</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            [/ for( let index = 0; index < meetings.length; index++ ) { /] <tr>
                                <td>[/= index+1 /]</td>
                                <td>[/= meetings[index].meeting_type == 1 ? "Perkara" : "Non Perkara" /]</td>
                                [/ if (!meetings[index].no_perkara || meetings[index].no_perkara.trim() == ""){ /]
                                <td>-</td>
                                [/ } else {/]
                                <td>[/= meetings[index].no_perkara /]</td>
                                [/ } /]
                                <td>[/= meetings[index].room_name /]</td>
                                <td>[/= meetings[index].start_date /]</td>
                                <td>[/= meetings[index].end_date /]</td>
                                [/ if (!meetings[index].no_perkara || meetings[index].no_perkara.trim() == ""){ /]
                                <td>Publik</td>
                                [/ } else {/]
                                <td>[/= meetings[index].participants /] Peserta</td>
                                [/ } /]
                                <td>
                                    <a href="/meeting/[/= meetings[index].room_id /]">
                                        <span>Detail</span>
                                    </a>
                                </td>
                                </tr>
                                [/ } /]
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <script src="/assets/plugins/jquery/jquery-3.7.1.min.js"></script>
    <script src="/assets/plugins/datatable/datatables.min.js"></script>
    <script>
        const backButton = [/- JSON.stringify(backButton) /];
    </script>
    <script src="/javascript/room_siram/room_siram.js"></script>

</body>

</html>