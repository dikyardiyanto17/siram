    <div class="navbar">
        <a href="[/= baseUrl /]">
            <img src="[/= baseUrl /]/assets/pictures/VmeetLogo.svg" alt="rdslogo" srcset="">
        </a>
        <div class="option-container">

            <div id="language-option" class="dropdown">
                <button class="dropdown-btn">
                    <img id="selected-flag" src="[/= baseUrl /]/assets/icons/us_flag.svg" alt="us_flag">
                    <span id="selected-language">EN</span>
                </button>
                <div class="dropdown-content">
                    <div class="dropdown-item" data-value="id" data-lang="Indonesian" id="indonesian-language">
                        <img src="[/= baseUrl /]/assets/icons/indonesia_flag.svg" alt="Indonesia Flag">
                        <span>Indonesian</span>
                    </div>
                    <div class="dropdown-item" data-value="en" data-lang="English" id="english-language">
                        <img src="[/= baseUrl /]/assets/icons/us_flag.svg" alt="US Flag">
                        <span>English</span>
                    </div>
                </div>
            </div>
            [/ if (!isLogin) { /]
            <button class="blue-button rounded sign-in-btn" id="sign-in-btn-modal-2">
                <span id="sign-in-button-title-navbar"></span>
            </button>
            [/ } else { /]
