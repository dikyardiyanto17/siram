                    <div class="card-meetings">
                        <div class="left-line"></div>
                        <div class="card-meeting-date">
                            <span>8 Januari 11.30 - 12.30</span>&nbsp;&nbsp;
                            <span class="green">Selesai</span>
                        </div>
                        <div>
                            <span>Meeting Mingguan</span>
                        </div>
                        <div>
                            <hr>
                        </div>
                        <div>
                            <img style="width: 10px;" src="/assets/icons/date-icon.svg" alt="calender"
                                srcset="">&nbsp;&nbsp;<span>TANGGAL</span>
                        </div>
                        <div><img style="width: 10px;" src="/assets/icons/clock_meeting.svg" alt="clock"
                                srcset="">&nbsp;&nbsp;<span>START _ END</span>
                        </div>
                        <div>
                            <img style="width: 10px;" src="/assets/icons/note.svg" alt="note" srcset="">&nbsp;&nbsp;
